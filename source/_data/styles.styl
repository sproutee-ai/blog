.team-member {
    display: flex;
    margin-bottom: 2rem;
    padding: 1rem;
    background: #333;
    border-radius: 12px;
}

.member-photo {
    width: 150px;
    height: 150px;
    margin-right: 2rem;
}

.member-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.member-info {
    flex: 1;
}

.team-footer {
    text-align: center;
    margin-top: 3rem;
    padding: 2rem;
    background: #333;
    border-radius: 12px;
}